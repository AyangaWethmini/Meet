@page "/"

     <h1>SafeMeet Dashboard</h1>

     @if (authService.IsAuthenticated)
     {
         <p>Welcome, @authService.CurrentUser.Name!</p>
         <p>Use the navigation menu to manage your availability or meeting requests.</p>
     }
     else
     {
         <p>Please <a href="https://localhost:5001/api/auth/login">log in</a> to access your dashboard.</p>
     }

     @code {
         [Inject] private AuthService authService { get; set; }
     }
