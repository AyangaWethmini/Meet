@page "/"

<div class="hero-section">
    <div class="hero-content">
        <div class="hero-icon">
            <i class="bi bi-calendar-check"></i>
        </div>
        <h1 class="hero-title text-gradient">OptiMeet Dashboard</h1>

        @if (authService.IsAuthenticated)
        {
            <div class="welcome-card card">
                <div class="card-body">
                    <h2 class="welcome-greeting">Welcome back, @authService.CurrentUser.Name! 👋</h2>
                    <p class="welcome-subtitle">Ready to optimize your meetings today?</p>

                    <div class="quick-actions">
                        <a href="/availability" class="btn btn-primary">
                            <i class="bi bi-calendar-week"></i>
                            Manage Availability
                        </a>
                        <a href="/meeting-requests" class="btn btn-outline-secondary">
                            <i class="bi bi-people"></i>
                            View Requests
                        </a>
                    </div>
                </div>
            </div>

            <div class="dashboard-grid">
                <div class="stat-card card">
                    <div class="stat-icon">
                        <i class="bi bi-calendar-event"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">12</h3>
                        <p class="stat-label">Upcoming Meetings</p>
                    </div>
                </div>

                <div class="stat-card card">
                    <div class="stat-icon">
                        <i class="bi bi-clock"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">24</h3>
                        <p class="stat-label">Available Hours</p>
                    </div>
                </div>

                <div class="stat-card card">
                    <div class="stat-icon">
                        <i class="bi bi-bell"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">3</h3>
                        <p class="stat-label">Pending Requests</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="login-prompt card">
                <div class="card-body text-center">
                    <div class="login-icon">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h2 class="login-title">Get Started with OptiMeet</h2>
                    <p class="login-subtitle">Sign in to access your personalized meeting dashboard and start optimizing
                        your schedule.</p>
                    <a href="https://localhost:5001/api/auth/login" class="btn btn-primary btn-lg">
                        <i class="bi bi-google"></i>
                        Sign in with Google
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Inject] private AuthService authService { get; set; } = default!;
}

           